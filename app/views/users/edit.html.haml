%main.container
  %h1.general-title-margin= t('default.setting')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('form_settings.address_tab')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('form_settings.privacy_tab')
  .tab-content
    .general-main-wrap#address.tab-pane.fade.in.active{role: "tabpanel"}
      %form
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0= t('form_settings.billing')
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0= t('form_settings.shipping')
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('form_settings.billing')
          = render 'addresses/address', address: @presenter.billing, type: :billing_address, method_type: @presenter.method_billing_address

        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('form_settings.shipping')
          = render 'addresses/address', address: @presenter.shipping, type: :shipping_address, method_type: @presenter.method_shipping_address
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render 'users/email_partial'
        = render 'users/password_partial'
        = render 'users/remove_account'

