.dropdowns.pull-right
  .dropdown.width-240
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = @presenter.selected_order
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      - @presenter.books_sorting_list.each do |sort_index, sort_name|
        %li
          = link_to sort_name, books_path(category_id: params[:category_id], sort_by: sort_index)
