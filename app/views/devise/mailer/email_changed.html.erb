<p><%= t('devise.mailer.email_changed.hello') %> <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('devise.mailer.email_changed.notification') %><%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p><%= t('devise.mailer.email_changed.contacting') %> <%= @resource.email %>.</p>
<% end %>
